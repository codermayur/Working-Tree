# Server (use PORT=5005 to match frontend VITE_API_URL=http://localhost:5005/api/v1)
NODE_ENV=development
PORT=5005
API_URL=http://localhost:5005
CLIENT_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/krishiconnect
MONGODB_TEST_URI=mongodb://localhost:27017/krishiconnect-test

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Chat (message encryption - min 32 chars)
CHAT_ENCRYPTION_KEY=your-32-char-or-longer-secret-key-for-aes256

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# # Twilio (SMS/OTP)
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# Email (Nodemailer - OTP & notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=Khetibari
SMTP_FROM_EMAIL=noreply@yourapp.com

# External APIs
AGMARKNET_API_KEY=your-agmarknet-key
OPENWEATHER_API_KEY=9a5539dd1de8392c0f6b06ccf407e11b
PLANT_DISEASE_API_URL=https://fast-api-model-g6ic.onrender.com/predict

# Market Prices API (data.gov.in). Get key: https://data.gov.in
MARKET_PRICES_API_URL=https://api.data.gov.in/resource/9ef84268-d588-465a-a308-a864a43d0070
MARKET_PRICES_API_KEY=your_api_key_here

# News (Agriculture) - NewsData.io. Get key: https://newsdata.io
NEWS_API_KEY=pub_066dee69490c475eb3766fb06ac9a09e
NEWS_API_URL=https://newsdata.io/api/1/latest

# APITube News API (optional). Get key: https://apitube.io/dashboard
# APITUBE_BASE_URL=https://api.apitube.io/v1
# APITUBE_KEY=your_apitube_api_key
# APITUBE_TIMEOUT=15000

# AI (Groq - Khetibari Assistant). Get key: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
# Optional: model (default: llama-3.1-8b-instant). E.g. llama-3.3-70b-versatile, llama3-70b-8192, mixtral-8x7b-32768
# GROQ_MODEL=llama-3.3-70b-versatile
# GROQ_AI_MODEL=llama-3.1-8b-instant

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
